{
    "// ============================================================": "",
    "// Theme Switcher": "",
    "// Click: Open theme menu | Right-click: Cycle themes": "",
    "custom/theme-switcher": {
        "exec": "$HOME/.config/waybar/bin/theme-switcher status",
        "return-type": "json",
        "interval": 30,
        "tooltip": true,
        "format": "{}",
        "on-click": "$HOME/.config/waybar/bin/theme-switcher menu",
        "on-click-right": "$HOME/.config/waybar/bin/theme-switcher cycle"
    },

    "// ============================================================": "",
    "// System Monitoring": "",
    "custom/system-monitor": {
        "exec": "$HOME/.config/waybar/bin/sys-monitor detailed",
        "return-type": "json",
        "interval": 2,
        "tooltip": true,
        "format": "{}",
        "on-click": "kitty -e htop",
        "on-click-right": "kitty -e btop"
    },

    "custom/gpu-monitor": {
        "exec": "$HOME/.config/waybar/bin/gpu-monitor",
        "return-type": "json",
        "interval": 2,
        "tooltip": true,
        "format": "{}",
        "on-click": "kitty -e intel_gpu_top"
    },

    "custom/netspeed": {
        "exec": "$HOME/.config/waybar/bin/netspeed",
        "return-type": "json",
        "interval": 2,
        "tooltip": true,
        "format": "{}",
        "on-click": "kitty -e bmon"
    },
    "custom/updates": {
        "exec": "$HOME/.config/waybar/bin/updates-monitor",
        "return-type": "json",
        "interval": 3600,
        "tooltip": true,
        "format": "{}",
        "on-click": "kitty -e sudo pacman -Syu",
        "signal": 8
    },
    "// ============================================================": "",
    "// Media Player (MPRIS) Controls": "",
    "// Enhanced controls with visual feedback": "",
    "// Click: Play/Pause | Right-click: Stop": "",
    "// Scroll Up: Next Track | Scroll Down: Previous Track": "",
    "custom/mpris": {
        "exec": "$HOME/.config/waybar/bin/mpris-control",
        "return-type": "json",
        "interval": 2,
        "tooltip": true,
        "format": "{}",
        "max-length": 50,
        "min-length": 0,
        "on-click": "$HOME/.config/waybar/scripts/mpris-action.sh play-pause",
        "on-click-middle": "$HOME/.config/waybar/scripts/mpris-action.sh stop",
        "on-click-right": "$HOME/.config/waybar/scripts/mpris-action.sh stop",
        "on-scroll-up": "$HOME/.config/waybar/scripts/mpris-action.sh next",
        "on-scroll-down": "$HOME/.config/waybar/scripts/mpris-action.sh prev",
        "escape": true,
        "signal": 8
    },
    "custom/privacy": {
        "exec": "$HOME/.config/waybar/bin/privacy-monitor",
        "return-type": "json",
        "interval": 3,
        "tooltip": true,
        "format": "{}"
    }
}
