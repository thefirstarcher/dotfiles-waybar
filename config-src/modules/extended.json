{
    "// ============================================================": "",
    "// Extended Modules - Weather, Connectivity, Utilities": "",
    "// ============================================================": "",
    "custom/weather": {
        "exec": "$HOME/.config/waybar/bin/weather-fetch",
        "return-type": "json",
        "interval": 1800,
        "tooltip": true,
        "format": "{}",
        "on-click": "xdg-open https://wttr.in"
    },
    "// Bluetooth Manager": "",
    "// Click: Toggle Bluetooth | Right-click: Open Manager": "",
    "custom/bluetooth": {
        "exec": "$HOME/.config/waybar/bin/bluetooth-mgr status",
        "return-type": "json",
        "interval": 5,
        "tooltip": true,
        "format": "{}",
        "on-click": "$HOME/.config/waybar/bin/bluetooth-mgr toggle",
        "on-click-right": "blueman-manager"
    },

    "// VPN Manager": "",
    "// Click: Toggle VPN | Right-click: Network Settings": "",
    "custom/vpn": {
        "exec": "$HOME/.config/waybar/bin/vpn-manager status",
        "return-type": "json",
        "interval": 5,
        "tooltip": true,
        "format": "{}",
        "on-click": "$HOME/.config/waybar/bin/vpn-manager toggle",
        "on-click-right": "nm-connection-editor"
    },

    "// Clipboard Manager": "",
    "// Click: Show History | Right-click: Clear": "",
    "custom/clipboard": {
        "exec": "$HOME/.config/waybar/bin/clipboard-mgr status",
        "return-type": "json",
        "interval": 1,
        "tooltip": true,
        "format": "{}",
        "on-click": "$HOME/.config/waybar/bin/clipboard-mgr show",
        "on-click-right": "$HOME/.config/waybar/bin/clipboard-mgr clear"
    },
    "custom/net-quality": {
        "exec": "$HOME/.config/waybar/bin/net-quality",
        "return-type": "json",
        "interval": 10,
        "tooltip": true,
        "format": "{}"
    }
}
