{
  "// Configuration": "Enhanced Waybar Configuration with Theming Support",
  "// ============================================================": "",
  "// Layout Configuration": "",
  "layer": "top",
  "position": "top",
  "height": 30,
  "spacing": 4,
  "// ============================================================": "",
  "// Module Layout": "",
  "// Left: Window management and media controls": "",
  "modules-left": [
    "sway/workspaces",
    "sway/mode",
    "custom/mpris"
  ],
  "// Center: Time and weather": "",
  "modules-center": [
    "clock",
    "custom/weather"
  ],
  "// Right: System monitoring and controls": "",
  "modules-right": [
    "custom/mpris",
    "custom/separator",
    "custom/weather",
    "group/system",
    "group/audio",
    "group/connectivity",
    "group/utilities",
    "custom/brightness",
    "battery",
    "tray"
  ],
  "// ============================================================": "",
  "// Sway Workspace Configuration": "",
  "sway/workspaces": {
    "disable-scroll": false,
    "all-outputs": true,
    "format": "{value}",
    "format-icons": {
      "1": "",
      "2": "",
      "3": "",
      "4": "",
      "5": "",
      "urgent": "",
      "focused": "",
      "default": ""
    }
  },
  "sway/mode": {
    "format": "<span style=\"italic\"> {}</span>",
    "tooltip": false
  },
  "// ============================================================": "",
  "// Clock & Weather": "",
  "clock": {
    "interval": 60,
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format": " {:%H:%M}",
    "format-alt": " {:%A, %B %d, %Y}",
    "on-click-right": "gnome-calendar"
  },
  "// ============================================================": "",
  "// Network Configuration": "",
  "network": {
    "interval": 5,
    "format-wifi": " {essid} ({signalStrength}%)",
    "format-ethernet": " {ipaddr}/{cidr}",
    "format-linked": " {ifname} (No IP)",
    "format-disconnected": "âš  Disconnected",
    "tooltip-format": "{ifname} via {gwaddr}\n{ipaddr}/{cidr}\nSignal: {signalStrength}%\nFrequency: {frequency}MHz",
    "tooltip-format-disconnected": "Disconnected",
    "on-click": "nm-connection-editor"
  },
  "// ============================================================": "",
  "// Audio Configuration": "",
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": " Muted",
    "format-bluetooth": " {icon} {volume}%",
    "format-bluetooth-muted": "  Muted",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": [
        "",
        "",
        ""
      ]
    },
    "scroll-step": 5,
    "on-click": "pavucontrol",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "tooltip-format": "{desc}\nVolume: {volume}%"
  },
  "// ============================================================": "",
  "// Battery Configuration": "",
  "battery": {
    "interval": 30,
    "states": {
      "good": 80,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format-full": " {capacity}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ],
    "tooltip-format": "{timeTo}\nCapacity: {capacity}%\nPower: {power}W",
    "on-scroll-up": "",
    "on-scroll-down": ""
  },
  "// ============================================================": "",
  "// System Tray": "",
  "tray": {
    "icon-size": 18,
    "spacing": 10,
    "show-passive-items": true
  },
  "// ============================================================": "",
  "// Module Groups with Drawer": "",
  "group/system": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/system",
      "custom/gpu"
    ]
  },
  "group/audio": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": [
      "pulseaudio",
      "custom/audio-viz",
      "custom/app-volume"
    ]
  },
  "group/connectivity": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/network",
      "custom/hardware"
    ]
  },
  "group/utilities": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/theme-switcher",
      "custom/clipboard",
      "custom/updates"
    ]
  },
  "// ============================================================": "",
  "// Separator": "",
  "custom/separator": {
    "format": "|",
    "tooltip": false
  }
}
